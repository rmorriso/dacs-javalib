<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>dacs-demo</display-name>
    <filter>
        <filter-name>DacsFilter</filter-name>
        <filter-class>fedroot.demo.dacsweb.DacsFilter</filter-class>
        <init-param>
            <param-name>dacs_base_uri</param-name>
            <param-value>https://fedroot.com/dacs</param-value>
        </init-param>
        <init-param>
            <param-name>dacs_auth_jurisdiction</param-name>
            <param-value>METALOGIC</param-value>
        </init-param>
        <init-param>
            <param-name>session_user_role</param-name>
            <param-value>dacsUserRole</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>DacsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>DacsDemoServlet</servlet-name>
        <servlet-class>fedroot.demo.dacsweb.DacsDemoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DacsDemoServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
