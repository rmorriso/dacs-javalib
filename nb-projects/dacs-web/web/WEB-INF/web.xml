<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <context-param>
        <description>the DACS federation domain under which the application is deployed</description>
        <param-name>domain</param-name>
        <param-value>.fedroot.com</param-value>
    </context-param>
    <context-param>
        <param-name>path</param-name>
        <param-value>/dacs-web</param-value>
    </context-param>
    <filter>
        <filter-name>DacsLog</filter-name>
        <filter-class>com.fedroot.dacs.servlet.DacsLogFilter</filter-class>
        <description>
            Logs DACS cookies found in request.
        </description>
    </filter>
    <filter-mapping>
        <filter-name>DacsLog</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>      
    <servlet>
        <servlet-name>DacsCheck</servlet-name>
        <servlet-class>com.fedroot.dacs.web.DacsCheck</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DacsCheck</servlet-name>
        <url-pattern>/DacsCheck</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DacsConf</servlet-name>
        <servlet-class>com.fedroot.dacs.web.DacsConf</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DacsConf</servlet-name>
        <url-pattern>/DacsConf</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EchoCookies</servlet-name>
        <servlet-class>com.fedroot.dacs.web.EchoCookies</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EchoCookies</servlet-name>
        <url-pattern>/EchoCookies</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditCookies</servlet-name>
        <servlet-class>com.fedroot.dacs.web.EditCookies</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCookies</servlet-name>
        <url-pattern>/EditCookies</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Test902Handler</servlet-name>
        <servlet-class>com.fedroot.dacs.web.Test902Handler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Test902Handler</servlet-name>
        <url-pattern>/Test902Handler</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>openIDConsumer</servlet-name>
        <display-name>Open ID Consumer</display-name>
        <servlet-class>
            com.fedroot.openid.OpenIDConsumerServlet
        </servlet-class>
        <init-param>
            <param-name>verifiedIdentityHandler</param-name>
            <param-value>com.fedroot.openid.DacsVerifiedIdentityHandler</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>openIDConsumer</servlet-name>
        <url-pattern>/openIDConsumer/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
